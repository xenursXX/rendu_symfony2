{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Tag list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>My tag number</th>
                <th>Released at</th>
                <th>Category</th>
                <th>Article</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tag_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.number }}</td>
                <td>{% if entity.releasedAt %}{{ entity.releasedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('tag_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('tag_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('tag_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
